<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.BookmarkFragment"
    android:background="@color/white">

    <!-- Header biru -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:background="@drawable/bg_blue"
        android:gravity="start"
        android:paddingHorizontal="20dp"
        android:paddingTop="30dp"
        android:paddingBottom="15dp">

        <!-- Logo putih -->
        <ImageView
            android:id="@+id/iv_logo_main"
            android:layout_width="96dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_logo_main"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:contentDescription="App Logo"
            app:tint="@android:color/white" />

        <!-- Judul utama -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Bookmarks"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginLeft="9dp"
            android:layout_marginBottom="4dp" />

        <!-- Deskripsi singkat -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your saved articles"
            android:textColor="@android:color/white"
            android:layout_marginLeft="9dp"
            android:textSize="13sp" />
    </LinearLayout>

    <!-- Konten utama putih rounded (overlap sedikit dengan header biru) -->
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_marginTop="-20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:background="@drawable/bg_white_rounded"
        android:padding="12dp">

        <!-- Progress bar -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_bookmarks"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_news_article" />

        <!-- Pesan kosong -->
        <TextView
            android:id="@+id/tv_empty_bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No bookmarks saved yet."
            android:layout_gravity="center"
            android:visibility="gone"
            tools:visibility="visible" />
    </LinearLayout>

</RelativeLayout>
